// ==== Prisma Schema (bersih & valid) ====

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Report {
  id           String    @id @default(uuid())
  reporterWa   String
  name         String?   // Nama pelapor
  disasterType String
  description  String?
  severity     String?
  happenedAt   DateTime?
  address      String?
  lat          Float     @default(0)
  lon          Float     @default(0)
  kecamatan    String?   // Kecamatan
  desa         String?   // Desa/Kelurahan
  mediaUrls    Json      @default("[]") // MySQL: JSON array
  status       String    @default("draft") // draft|new|verified|invalid|resolved
  nextStep     String? // type|location|kecamatan|desa|time|desc|severity|media|confirm
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
